<?xml version="1.0" encoding="utf-8"?>
<com.example.leijianmin.myapplication.houseparty.DropdownLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dropdown_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/drawer_party_home"
        android:name="com.example.leijianmin.myapplication.houseparty.PartyHomeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50ff0000"
        android:tag="drag_view">

        <Button
            android:id="@+id/execute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="execute"/>

    </FrameLayout>
</com.example.leijianmin.myapplication.houseparty.DropdownLayout>